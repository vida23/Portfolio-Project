<div class="container">

    <h1 class="title has-text-centered">Get in touch</h1>
    <p class="has-text-centered">Fill the form below and we will contact you</p>

    <div class="colums">
        <div class="column is-mobile has-text-centered">
            <div class="column is-three-fifths is-offset-one-fifth">


                {{#if databaseError}}
                <p>Internal server error. Cannot send request.</p>
                {{/if}}

                {{#if validationErrors.length}}
                <p>Error occurred:</p>
                <ul>
                    {{#each validationErrors}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                {{/if}}


                <form method="POST" action="">
                    <div>

                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label has-text-white">From</label>
                            </div>
                            <div class="field-body">
                                <div class="field">
                                    <p class="control is-expanded has-icons-left">
                                        <input class="input" type="text" id="input-contactName" placeholder="Name"
                                            name="contactName" value="{{contactName}}">
                                        <span class="icon is-small is-left">
                                            <i class="fas fa-user"></i>
                                        </span>
                                    </p>
                                    <p class="help is-danger">
                                        This field is required
                                    </p>
                                </div>

                                <div class="field">
                                    <p class="control is-expanded has-icons-left has-icons-right">
                                        <input class="input" type="email" id="input-contactEmail" placeholder="Email"
                                            name="contactEmail" value="{{contactEmail}}">
                                        <span class="icon is-small is-left">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                    <p class="help is-danger">This field is required</p>

                                </div>
                            </div>
                        </div>

                        <div class="field is-horizontal">
                            <div class="field-label is-normal"></div>
                            <div class="field-body">
                                <div class="field is-expanded">
                                    <div class="field has-addons">
                                        <p class="control is-expanded">
                                            <input class="input" type="tel" id="input-contactTel"
                                                placeholder="Your phone number" name="contactTel"
                                                value="{{contactTel}}">
                                        </p>
                                    </div>
                                    <p class="help is-danger">This field is required</p>
                                </div>
                            </div>
                        </div>

                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label has-text-white">Subject</label>
                            </div>
                            <div class="field-body">
                                <div class="field ">
                                    <div class="control">
                                        <input class="input" type="text" id="input-"
                                            placeholder="e.g. Partnership opportunity" name="requestSubject"
                                            value="{{requestSubject}}">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label has-text-white"></label>
                            </div>
                            <div class="field-body">
                                <div class="field">
                                    <div class="control">
                                        <textarea class="textarea" placeholder="Explain how we can help you"
                                            name="requestContent" value="{{requestContent}}"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field is-horizontal">
                            <div class="field-label">
                                <!-- Left empty for spacing -->
                            </div>
                            <div class="field-body">
                                <div class="field">
                                    <div class="control">

                                        <input type="hidden" name="_csrf" value="{{csrfToken}}">

                                        <button type="submit" class="button is-danger">
                                            Send message
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>